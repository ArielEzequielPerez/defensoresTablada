@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" href="~/css/styles.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/styleFormulario.css" />

<section class="formulario-registro">
    <form id="account" method="post">
        <h4>Inicie Sesion</h4>

        <div asp-validation-summary="All" class="text-danger">

        </div>

        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="boton">Iniciar Sesion</button>
        </div>
        <div class="form-group">
            <p>
                <a id="forgot-password" class="btn btn-info" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">No tenes una cuenta?</a>
            </p>
            <!--
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación por correo</a>
            </p>-->
        </div>
    </form>
</section>
