@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registro confirmado";
}

<h1 class="colorLetra">@ViewData["Title"]</h1>
<link href="~/css/styles.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p class="textoCentro">
            <a id="confirm-link" class="colorLetra " href="@Model.EmailConfirmationUrl">Click acá para confirmar cuenta</a>
        </p>
    }
    else
    {
    <p class="colorLetra textoCentro">
        Por favor revise su correo electrónico para confirmar su cuenta.
    </p>
    }
}
