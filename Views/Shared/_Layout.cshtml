@using Microsoft.AspNetCore.Identity
@using defensoresTablada
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - defensoresDeTablada</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 colorNavbar ">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" width="60" height="60" /> </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @if (!SignInManager.IsSignedIn(User))
                    {
                        ApplicationUser loggedUser = await UserManager.GetUserAsync(User);
                        if (await UserManager.IsInRoleAsync(loggedUser, "Admnistrador"))
                        {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark colorLetra" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark colorLetra" asp-area="" asp-controller="Home" asp-action="Privacy">Nosotros</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark colorLetra" asp-area="" asp-controller="Home" asp-action="Actividades">Actividades</a>
                            </li>
                        </ul>
                        }
                    }
                    else
                    {

                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark colorLetra" asp-area="" asp-controller="Rutinas" asp-action="Index">Ver mi rutina</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark colorLetra" asp-area="" asp-controller="Rutinas" asp-action="Create">Agregar ejercicio</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark colorLetra" asp-area="" asp-controller="MaximaRepeticions" asp-action="Index">Ver mi RM</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark colorLetra" asp-area="" asp-controller="MaximaRepeticions" asp-action="Create">Agregar Rm</a>
                        </li>                 
                    </ul>
                    }


                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <h1></h1>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted colorNavbar">
        <div class="container colorLetra">
            &copy; 2021 - Defensores de tablada - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="vinculo">Nosotros</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
